<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="358dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elorrieta_erreka_mari_93dac93" />

    <Button
        android:id="@+id/buttonMessage"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/elorrieta1"
        android:text="Mensajes"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/horario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfile"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/elorrieta1"
        android:text="@string/profile"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/elorrieta1"
        android:text="@string/logout"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horario"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/horario"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/elorrieta1"
        android:text="Horario"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMessage"
        app:layout_constraintWidth_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>